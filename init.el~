;; Added by Package.el.  This must come before configurations of
;; installed packages.  Don't delete this line.  If you don't want it,
;; just comment it out by adding a semicolon to the start of the line.
;; You may delete these explanatory comments.
(when (>= emacs-major-version 24)
  (require 'package)
  (package-initialize)
  (add-to-list 'package-archives '("melpa" . "http://melpa.org/packages/") t)
  )
(require 'cl)
(defvar ycw/packages '(
		       monokai-theme
		       hungry-delete
		       smex
		       swiper
		       counsel
		       smartparens
		       js2-mode
		       nodejs-repl
		       ) "Default packages")
(setq package-selected-packages ycw/packages)
(defun ycw/packages-installed-p ()
  (loop for pkg in ycw/packages
	when (not (package-installed-p pkg)) do (return nil)
	finally (return t)))

(unless (ycw/packages-installed-p)
  (message "%s" "Refreshing package database...")
  (package-refresh-contents)
  (dolist (pkg ycw/packages)
    (when (not (package-installed-p pkg))
      (package-install pkg))))

				    
					;run js
(require 'nodejs-repl)
(global-set-key (kbd "C-x j") 'nodejs-repl-send-buffer)
